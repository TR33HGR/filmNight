<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/eventCreate_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/eventCreate_film_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eventCreate_poster_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:minHeight="128dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:id="@+id/eventCreate_filmInfo_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventCreate_filmTitle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="bottom"
                    tools:text="@string/filmNameFiller" />

                <LinearLayout
                    android:id="@+id/eventCreate_filmInfoExtra_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eventCreate_filmYear_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        tools:text="@string/filmYearFiller" />

                    <TextView
                        android:id="@+id/eventCreate_filmGenre_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        tools:text="@string/filmGenreFiller" />

                    <TextView
                        android:id="@+id/eventCreate_filmLanguage_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        tools:text="@string/filmLanguageFiller" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/eventCreate_filmPlot_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="10"
            android:scrollbars="vertical"
            tools:text="@string/filmPlotFiller" />

        <RelativeLayout
            android:id="@+id/eventCreate_event_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/eventCreate_hostInfo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/eventCreate_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    tools:text="@string/enterName" />

                <EditText
                    android:id="@+id/eventCreate_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    tools:text="@string/enterAddress" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eventCreate_eventLimits_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventCreate_hostInfo_layout"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/eventCreate_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="time"
                    tools:text="@string/enterArrivalTime" />

                <EditText
                    android:id="@+id/eventCreate_date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="date"
                    tools:text="@string/enterEventDate" />

                <EditText
                    android:id="@+id/eventCreate_numPeople_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    tools:text="@string/enterNumGuests" />
            </LinearLayout>

            <!--https://android-arsenal.com/details/1/7063-->
            <com.innovattic.rangeseekbar.RangeSeekBar
                android:id="@+id/eventCreate_ageRange_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventCreate_eventLimits_layout"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/eventCreate_radioButts_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventCreate_ageRange_range"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventCreate_foodQ_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@string/foodRadTitle" />

                <RadioGroup
                    android:id="@+id/eventCreate_foodGroup_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/eventCreate_noFood_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no" />

                    <RadioButton
                        android:id="@+id/eventCreate_byoFood_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/byo" />

                    <RadioButton
                        android:id="@+id/eventCreate_suppliedFood_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/supplied" />

                    <CheckBox
                        android:id="@+id/eventCreate_vegetarian_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/vegetarianQ" />

                    <CheckBox
                        android:id="@+id/eventCreate_vegan_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/veganQ" />

                </RadioGroup>

                <TextView
                    android:id="@+id/eventCreate_drinksQ_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@string/drinkRadTitle" />

                <RadioGroup
                    android:id="@+id/eventCreate_drinksGroup_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/eventCreate_noDrinks_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no" />

                    <RadioButton
                        android:id="@+id/eventCreate_byoDrinks_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/byo" />

                    <RadioButton
                        android:id="@+id/eventCreate_suppliedDrinks_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/supplied" />

                    <CheckBox
                        android:id="@+id/eventCreate_alcohol_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/alcoholAllowed" />


                </RadioGroup>

            </LinearLayout>

            <ImageButton
                android:id="@+id/eventCreate_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/eventCreate_radioButts_layout"
                android:layout_below="@id/eventCreate_radioButts_layout"
                app:srcCompat="@android:drawable/ic_menu_send" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>